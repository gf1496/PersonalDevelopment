<Window x:Class="PoemsController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ピコンだで" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="現在値" FontSize="14" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Bid:" Width="40"/>
                <TextBlock x:Name="BidText" FontSize="20" Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="Ask:" Width="40"/>
                <TextBlock x:Name="AskText" FontSize="20" Width="150"/>
            </StackPanel>

            <TextBlock Text="ロット数" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="LotBox" Width="80" Margin="0,0,8,0" Text="1.0"/>
                <Button Content="買い" Width="60" Click="OnBuyClick" Margin="0,0,4,0"/>
                <Button Content="売り" Width="60" Click="OnSellClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
